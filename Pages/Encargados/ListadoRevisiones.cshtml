@page
@model Impresoras3D.App.Frontend.Pages.ListadoRevisionesModel
@{
}
<br><p>@TempData["Usuario"]</p>
<form method="POST">
<h1>Listado de revisiones</h1>
<div class="form-group">
    <label for="impresora3D">PlacaInventario</label>
    <input class="form-control" type="text" value="@Model.impresora3D.PlacaInventario"aria-label="readonly input example"readonly>
    <label for="impresora3D">Id</label>
    <input class="form-control" type="text" value="@Model.impresora3D.Id"aria-label="readonly input example"readonly>

</div>

<div class="form-group">
        

    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Estado del cabezal</th>
                <th scope="col">Estado extrusor</th>
                <th scope="col">Voltaje de la fuente </th>
                <th scope="col">Alienacion de la cama</th>
                <th scope="col">Fecha de la Revision</th>
            
            </tr>
        </thead>
        <tbody>
            @if (Model.revision != null)
            {
               @foreach (var revisiones in Model.revision)
                {
                    <tr>
                        <th scope="row">@revisiones.Id</th>
                        <td>@revisiones.EstadoCabezal</td>
                        <td>@revisiones.EstadoExtrusor</td>
                        <td>@revisiones.VoltajeFuente</td>
                        <td>@revisiones.AlineacionCama</td>
                        <td>@revisiones.FechaRevision</td>
                        @*<td>
                            <a asp-page="./ConsultasImpresora" class="btn btn-warning"
                            asp-route-PlacaInventario="@impresora.PlacaInventario">Consultar</a>
                            <a asp-page="./EditarImpresora" class="btn btn-primary" asp-route-id="@impresora.Id">Editar</a>
                            <a asp-page="./CrearImpresora" class="btn btn-danger" asp-route-id="@impresora.Id">Crear</a>
                            <a asp-page="./CrearImpresora" class="btn btn-danger" asp-route-id="@impresora.Id">Revisiones</a>
                        </td> *@
                    </tr>
                }
            }
     </tbody>
    </table>
</form>
